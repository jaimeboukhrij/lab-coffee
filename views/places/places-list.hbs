<div class="driverbg">
    <div class="container text-center">
        <div class="row d-flex justify-content-evenly"">
    {{#each places}}
    <div class=" drivercard" style="width: 18rem;">
            <div class=" card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text"><strong>Type: </strong> {{ type}}</p>
                <p class="card-text"><strong>Latitude: </strong> {{location.coordinates.[0]}}</p>
                <p class="card-text"><strong>Longitud: </strong> {{location.coordinates.[1]}}</p>
                <form action="/places/delete/{{id}}" method="POST" style="display: inline">
                    <input type="submit" value="eliminar" class="btn btn-danger">
                </form>
                <a href="/places/edit/{{_id}}" class="btn btn-primary">Edit Dron</a>

            </div>
        </div>
        {{/each}}
    </div>
</div>
</div>